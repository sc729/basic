

백업
"build" : "browserify -t [ babelify --presets [ es2015 react ] ] src/main/resources/static/myFirstReactComponent/myOwn.jsx > src/main/resources/static/bundle.js",
"start" : "watchify src/main/resources/static/myFirstReactComponent/myOwn.jsx -v -t [ babelify --presets [ es2015 react ] ]   -o src/main/resources/static/bundle.js",
"build-all": "babel --presets react src/main/resources/static/myFirstReactComponent --watch --out-dir target/classes/static/myFirstReactComponent",
"start-second" : "watchify src/main/resources/static/mySecondReactComponent/index.js -v -t [ babelify --presets [ es2015 react ] ]   -o src/main/resources/static/bundle2.js"


"watchify src/main/resources/static/myFirstFluxApp/app.js -v -t [ babelify --presets [ es2015 react ] ] -o src/main/resources/static/myFirstFluxApp/bundle.js",


